{
	"$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/refs/heads/master/packages/app-builder-lib/scheme.json",
	"appId": "ocs.enncy.cn",
	"extraMetadata": {
		"name": "OCS Desktop",
		"description": "OCS 浏览器自动化神器，一键浏览器多开，用户脚本环境一键配置。"
	},
	"productName": "OCS Desktop",
	"asar": false,
	"copyright": "Copyright © 2021 ${author}",
	"nsis": {
		"oneClick": false,
		"perMachine": true,
		"allowToChangeInstallationDirectory": true
	},
	"rpm": {
		"packageName": "ocs-desktop"
	},
	"deb": {
		"packageName": "ocs-desktop"
	},
	"win": {
		"icon": "public/favicon.png",
		"artifactName": "ocs-${version}-setup-${os}-${arch}.${ext}",
		"target": [{ "target": "nsis", "arch": ["x64", "ia32"] }],
		"requestedExecutionLevel": "highestAvailable"
	},
	"mac": {
		"icon": "public/favicon.icns",
		"artifactName": "ocs-${version}-setup-${os}-${arch}.${ext}",
		"target": [
			{ "target": "zip", "arch": ["x64", "arm64"] },
			{ "target": "dmg", "arch": ["x64", "arm64"] }
		]
	},
	"linux": {
		"executableName": "ocs-desktop",
		"icon": "public/favicon.png",
		"artifactName": "ocs-${version}-setup-${os}-${arch}.${ext}",
		"target": [
			{ "target": "AppImage", "arch": ["x64", "arm64"] },
			{ "target": "deb", "arch": ["x64", "arm64"] },
			{ "target": "rpm", "arch": ["x64", "arm64"] }
		]
	}
}
